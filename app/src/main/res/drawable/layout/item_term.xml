<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <com.amirahmed.mykids.Utils.TextViewWithFont
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="اختبار الميدتيرم 1"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/subject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/marksimage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/item"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="120dp"
        app:lottie_fileName="star.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:rotation="180"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/timesimage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/item"
        android:layout_alignLeft="@id/marksimage"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="80dp"
        app:lottie_fileName="stopwatch.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:rotation="180"/>


</RelativeLayout>