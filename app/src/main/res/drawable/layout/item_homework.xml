<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemlayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:id="@+id/that"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundedhome"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_marginRight="53dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.amirahmed.mykids.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المعلم"
                    android:textColor="@color/path_black"
                    android:textSize="17sp"/>

                <com.amirahmed.mykids.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ "
                    android:textSize="17sp"/>

                <com.amirahmed.mykids.Utils.TextViewWithFont
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الاسم"
                    android:textSize="17sp"
                    android:textColor="@color/path_black"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout">


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="العنوان"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#009688" />

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:id="@+id/wagebtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ajsgdjashdash"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="الواجب  "
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>



                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#009688" />

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:id="@+id/tahdertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ajsgdjashdash"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="ملاحظات"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#009688" />

                    <com.amirahmed.mykids.Utils.TextViewWithFont
                        android:id="@+id/molahzattext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ajsgdjashdash"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/sharehomework"/>

                    <ImageView
                        android:id="@+id/reminder"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="65dp"
                        android:src="@drawable/remindhomework"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/dropdown"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>


        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/circle"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <ImageView
        android:id="@+id/subject"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/warabic"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>


</RelativeLayout>