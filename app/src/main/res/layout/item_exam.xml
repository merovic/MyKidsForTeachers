<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@drawable/roundedframe">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcircle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <com.amirahmed.mykidsforteachers.Utils.TextViewWithFont
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="٢٦"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <com.amirahmed.mykidsforteachers.Utils.TextViewWithFont
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ديسمبر"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>



    <com.amirahmed.mykidsforteachers.Utils.TextViewWithFont
        android:id="@+id/subjectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="لغة عربية"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <Button
        android:id="@+id/buttonedit"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="اضافة النتيجة"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/roundedtext4"
        android:layout_marginBottom="20dp"
        android:textColor="#009688"/>


</LinearLayout>