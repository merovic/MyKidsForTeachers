<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtext2"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.amirahmed.mykidsforteachers.Utils.TextViewWithFont
            android:id="@+id/studentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عمر سعيد"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/studentscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/studentcomment"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="ممتاز"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/donebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/roundedfill"
            android:textColor="#FFFF"
            android:layout_margin="10dp"/>


    </LinearLayout>

</LinearLayout>