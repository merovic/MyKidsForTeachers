<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/logomain2"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedlogin">

        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textDirection="ltr"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/roundedno"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/personn2"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundedlogin">

        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:textDirection="ltr"
            android:layout_weight="1"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/roundedno"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lockn2"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>



    </LinearLayout>


    <ImageView
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/loginbutton"
        android:layout_gravity="center"/>

    <com.amirahmed.mykids.Utils.TextViewWithFont
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل نسيت كلمة المرور ؟"
        android:layout_gravity="center"
        android:textColor="#3c9fab"/>

</LinearLayout>